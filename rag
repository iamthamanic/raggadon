#!/bin/bash

# Raggadon CLI - Einfacher Zugriff auf RAG-System

RAGGADON_URL="http://127.0.0.1:8000"
PROJECT_NAME=$(basename "$PWD")

case "$1" in
    save)
        shift
        CONTENT="$*"
        if [ -z "$CONTENT" ]; then
            echo "‚ùå Verwendung: rag save \"Deine wichtige Info\""
            exit 1
        fi
        
        curl -s -X POST "$RAGGADON_URL/save" \
            -H "Content-Type: application/json" \
            -d "{\"project\": \"$PROJECT_NAME\", \"role\": \"user\", \"content\": \"$CONTENT\"}" | \
        python3 -c "import sys, json; d=json.load(sys.stdin); print(f'‚úÖ Gespeichert f√ºr Projekt \\'$PROJECT_NAME\\': {d.get(\\"tokens_used\\", 0)} Tokens')" 2>/dev/null || \
        echo "‚ùå Raggadon l√§uft nicht! Starte mit: ~/Desktop/ars\\ vivai/Raggadon/start_server.sh"
        ;;
        
    search)
        shift
        QUERY="$*"
        if [ -z "$QUERY" ]; then
            echo "‚ùå Verwendung: rag search \"suchbegriff\""
            exit 1
        fi
        
        echo "üîç Suche nach '$QUERY' in Projekt '$PROJECT_NAME'..."
        curl -s "$RAGGADON_URL/search?project=$PROJECT_NAME&query=$QUERY" | \
        python3 -c "
import sys, json
try:
    data = json.load(sys.stdin)
    results = data.get('results', [])
    print(f'\\nüìö {len(results)} Ergebnisse gefunden:\\n')
    for i, r in enumerate(results[:5], 1):
        print(f'{i}. [{r[\"similarity\"]:.2f}] {r[\"content\"][:150]}...')
        print()
except:
    print('‚ùå Raggadon l√§uft nicht! Starte mit: ~/Desktop/ars\\\\ vivai/Raggadon/start_server.sh')
"
        ;;
        
    status)
        curl -s "$RAGGADON_URL/health" > /dev/null 2>&1
        if [ $? -eq 0 ]; then
            echo "‚úÖ Raggadon l√§uft auf $RAGGADON_URL"
            echo "üìÅ Aktuelles Projekt: $PROJECT_NAME"
            echo ""
            
            # Hole Projekt-Statistiken
            STATS=$(curl -s "$RAGGADON_URL/project/$PROJECT_NAME/stats")
            
            if [ $? -eq 0 ] && [ -n "$STATS" ]; then
                echo "$STATS" | python3 -c "
import sys, json
from datetime import datetime, timezone

def format_timestamp(timestamp_str):
    if not timestamp_str:
        return 'nie'
    try:
        # Parse ISO timestamp (handle different formats)
        if 'T' in timestamp_str:
            # Remove timezone info if present
            ts = timestamp_str.split('+')[0].split('Z')[0]
            dt = datetime.fromisoformat(ts)
            # Convert to local time
            if dt.tzinfo is None:
                dt = dt.replace(tzinfo=timezone.utc)
            local_dt = dt.astimezone()
        else:
            dt = datetime.fromisoformat(timestamp_str)
            local_dt = dt
            
        # Format as: 24.Juli.2025 - 13:54:01 Uhr
        months = ['Januar', 'Februar', 'M√§rz', 'April', 'Mai', 'Juni',
                 'Juli', 'August', 'September', 'Oktober', 'November', 'Dezember']
        
        day = local_dt.day
        month = months[local_dt.month - 1]
        year = local_dt.year
        hour = local_dt.hour
        minute = local_dt.minute
        second = local_dt.second
        
        return f'{day}.{month}.{year} - {hour:02d}:{minute:02d}:{second:02d} Uhr'
        
    except Exception as e:
        # Fallback: show original timestamp
        return timestamp_str

try:
    stats = json.load(sys.stdin)
    print('üìä Projekt-Statistiken:')
    print(f'   üíæ Gespeicherte Eintr√§ge: {stats.get(\"total_memories\", 0)}')
    print(f'   üî§ Tokens diesen Monat: {stats.get(\"monthly_tokens\", 0):,}')
    print(f'   üí∞ Gesch√§tzte Kosten: \${stats.get(\"estimated_monthly_cost_usd\", 0):.4f}')
    print(f'   ü§ñ Embedding Model: {stats.get(\"model\", \"unknown\")}')
    print(f'   üíµ Preis: \${stats.get(\"cost_per_1k_tokens\", 0):.2f} pro 1K Tokens')
    
    # Zeitangaben
    first = stats.get('first_activity')
    last = stats.get('last_activity')
    if first:
        print(f'   üïê Erste Aktivit√§t: {format_timestamp(first)}')
    if last:
        print(f'   üïê Letzte Aktivit√§t: {format_timestamp(last)}')
    
    activities = stats.get('recent_activities', [])
    if activities:
        print('\\nüìã Letzte Aktivit√§ten:')
        for act in activities[:3]:
            print(f'   ‚Ä¢ {act[\"type\"]}: {act[\"tokens\"]} Tokens')
except Exception as e:
    print('   ‚ÑπÔ∏è Noch keine Statistiken f√ºr dieses Projekt vorhanden')
"
            else
                echo "   ‚ÑπÔ∏è Noch keine Statistiken f√ºr dieses Projekt vorhanden"
            fi
        else
            echo "‚ùå Raggadon l√§uft nicht!"
            echo "üöÄ Starte mit: ~/Desktop/ars\\ vivai/Raggadon/start_server.sh"
        fi
        ;;
        
    start)
        echo "üöÄ Starte Raggadon Server..."
        ~/Desktop/ars\ vivai/Raggadon/start_server.sh &
        ;;
        
    mode)
        shift
        MODE="$1"
        CONFIG_FILE="$HOME/.rag_config"
        
        case "$MODE" in
            active|a|verbose|v)
                echo "active" > "$CONFIG_FILE"
                echo "‚úÖ Active Mode aktiviert - Claude zeigt alle RAG-Speicherungen an"
                ;;
            silent|s)
                echo "silent" > "$CONFIG_FILE"
                echo "‚úÖ Silent Mode aktiviert - RAG arbeitet im Hintergrund"
                echo "   üí° Status sehen mit: rag status"
                ;;
            ask|question|q)
                echo "ask" > "$CONFIG_FILE"
                echo "‚úÖ Ask Mode aktiviert - Frage vor jeder RAG-Operation"
                ;;
            show|status)
                if [ -f "$CONFIG_FILE" ]; then
                    CURRENT_MODE=$(cat "$CONFIG_FILE")
                    # Convert old verbose to active
                    if [ "$CURRENT_MODE" = "verbose" ]; then
                        echo "active" > "$CONFIG_FILE"
                        CURRENT_MODE="active"
                    fi
                    echo "üîß Aktueller Modus: $CURRENT_MODE"
                else
                    echo "üîß Aktueller Modus: active (Standard)"
                fi
                ;;
            *)
                echo "‚ùå Unbekannter Modus: $MODE"
                echo ""
                echo "Verf√ºgbare Modi:"
                echo "  rag mode active   # Claude zeigt alle RAG-Speicherungen an"
                echo "  rag mode silent   # Arbeite im Hintergrund (Status mit 'rag status')"
                echo "  rag mode ask      # Frage vor jeder Operation"
                echo "  rag mode show     # Zeige aktuellen Modus"
                ;;
        esac
        ;;
        
    *)
        echo "ü§ñ Raggadon CLI - RAG f√ºr Claude Code"
        echo ""
        echo "Verwendung:"
        echo "  rag save \"Wichtige Info\"    # Speichert Info f√ºr aktuelles Projekt"
        echo "  rag search \"keyword\"        # Sucht im aktuellen Projekt"
        echo "  rag status                  # Pr√ºft Server-Status"
        echo "  rag start                   # Startet Raggadon Server"
        echo "  rag mode <active|silent|ask|show>   # √Ñndert Auto-Save Modus"
        echo ""
        echo "Aktuelles Projekt: $PROJECT_NAME"
        ;;
esac